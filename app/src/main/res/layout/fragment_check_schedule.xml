<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.CheckScheduleFragment"
    android:orientation="vertical"
    android:id="@+id/ChecKScheduleLayout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/date_picker_checkschedukle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Date"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/baseline_calendar_month_24"
            app:endIconTint="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_input_feild"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:inputType="none"
                android:focusable="false"
                android:clickable="true"
                android:enabled="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="From"
            android:paddingLeft="10dp"
            android:textSize="25dp"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/timePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Time"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/baseline_access_time_24"
            app:endIconTint="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/SelectTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:inputType="none"
                android:focusable="false"
                android:enabled="false"
                android:clickable="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To"
            android:paddingLeft="10dp"
            android:textSize="25dp"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/timePicker1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Time"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/baseline_access_time_24"
            app:endIconTint="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/SelectTime1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:enabled="false"
                android:background="@null"
                android:inputType="none"
                android:focusable="false"
                android:clickable="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meeting Venue"
            android:textSize="25dp"
            android:paddingLeft="10dp"/>

        <Spinner
            android:id="@+id/spinvenue"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:clickable="false"
            tools:ignore="SpeakableTextPresentCheck" />
        <Button
            android:layout_marginTop="10dp"
            android:paddingVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Done"
            android:id="@+id/btnmeetingschedule"
            android:layout_marginRight="120dp"
            android:layout_marginLeft="120dp"
            />
    </LinearLayout>
</FrameLayout>